{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es6", "dom"],
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src"],
      "@assets/*": ["src/assets/*"],
      "@components/*":["src/components/*"],
      "@styles/*":["src/styles/*"]
    }
  },

  "include": ["./**/*", "**/*.ts", "**/*.tsx"]
}
